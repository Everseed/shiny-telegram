generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  magicLink     MagicLink?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model MagicLink {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime  @default(now())
} 